}

<h1>GioHangCT</h1>

<p>
	<a asp-action="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.IDGHCT)
			</th>
			@*<th>
			@Html.DisplayNameFor(model => model.IDGH)
			</th>*@
