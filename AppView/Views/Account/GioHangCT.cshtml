			</th>
			<th>
				@Html.DisplayNameFor(model => model.Gia)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.SoLuong)
			</th>
			<th>
				<span>Thành Tiền</span>
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				@{
					double thanhtien = 0;
					thanhtien = (double)(item.SoLuong * item.Gia);
				}
				<td>
					@Html.DisplayFor(modelItem => item.IDGHCT)
				</td>
